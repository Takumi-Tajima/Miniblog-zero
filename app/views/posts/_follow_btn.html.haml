- if user_signed_in? && current_user != user
  - if user.followed_by?(current_user)
    = button_to 'フォロー解除', relationships_path(user_id: user.id), method: :delete, class: 'btn btn-danger'
  - else
    = button_to 'フォロー', relationships_path(user_id: user.id), method: :post, class: 'btn btn-primary'
