%ul.list-group.list-group-flush
  - @posts.each do |post|
    %li.list-group-item.p-2
      .fs-6
        = post.user.name
      .d-flex.justify-content-between
        = link_to post.content, post_path(post), class: 'text-decoration-none text-body'
        = button_to 'フォロー', relationships_path(user_id: post.user_id), method: :post
        = button_to 'フォロー解除', relationship_path(post.user_id), method: :delete
      .text-sm.text-end.mt-2.text-secondary
        = l post.created_at
